<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderForm">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make Order"
            android:textAllCaps="true"
            android:layout_marginTop="20dp"
            android:textSize="26sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:textColor="@color/redish" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Firstname"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/redish" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="First Name"
            android:padding="20dp"
            android:textColorHint="@color/redish"
            android:id="@+id/lastname"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/name"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/redish"
            android:inputType="text"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lastname"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/redish" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lastname"
            android:padding="20dp"
            android:textColorHint="@color/redish"
            android:id="@+id/firstname"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/name"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/redish"
            android:inputType="textEmailAddress"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/redish" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:padding="20dp"
            android:textColorHint="@color/redish"
            android:id="@+id/email"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/email_drawable"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/redish"
            android:inputType="text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/redish" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Contact"
            android:padding="20dp"
            android:textColorHint="@color/redish"
            android:id="@+id/phone"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/call"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/redish"
            android:inputType="text"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Type"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/redish" />

        <Spinner
            android:id="@+id/property_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_marginRight="0dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Name"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textColor="@color/redish" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Property Name"
            android:padding="20dp"
            android:textColorHint="@color/redish"
            android:id="@+id/propertyname"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ppty_name"
            android:background="@drawable/edit_text_background"
            android:textColor="@color/redish"
            android:inputType="text"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ways to make Payments"
            android:padding="5dp"
            android:textColor="@color/redish"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/redish"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="wrap_content"
                android:textColor="@color/redish"
                android:layout_height="wrap_content"
                android:text="Visa" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:textColor="@color/redish"
                android:layout_height="wrap_content"
                android:text="PayPal" />

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:textColor="@color/redish"
                android:layout_height="wrap_content"
                android:text="Mobile Money" />

        </RadioGroup>


        <Button
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="20dp"
            android:layout_marginTop="10dp"
            android:text="SUBMIT"
            android:id="@+id/submit"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/redish"/>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>